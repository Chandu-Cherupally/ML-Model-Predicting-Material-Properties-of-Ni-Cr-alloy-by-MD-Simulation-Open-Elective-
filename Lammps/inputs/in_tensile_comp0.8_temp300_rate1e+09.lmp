# NiCr Alloy Tensile Test - MEAM Potential
# Composition: Ni80Cr20

units metal
atom_style atomic
dimension 3
boundary p p p

# Create lattice
lattice fcc 3.52
region box block 0 10 0 10 0 10
create_box 2 box
create_atoms 1 box

# Set composition
set type 1 type/fraction 2 0.19999999999999996 12345

# MEAM Potential
pair_style meam
pair_coeff * * ../potentials/library.meam Ni Cr ../potentials/CrNi.meam Ni Cr

# Minimization
min_style cg
minimize 1e-10 1e-10 1000 1000

# Equilibration
velocity all create 300 54321 rot yes dist gaussian
timestep 0.001
fix 1 all npt temp 300 300 0.1 iso 0.0 0.0 1.0
run 1000  # Reduced for testing

# Tensile test
unfix 1
fix 1 all nvt temp 300 300 0.1
fix 2 all deform 1 x erate 1000000000.0 units box remap x

# Stress calculation
compute p all stress/atom NULL
compute pxx all reduce sum c_p[1]

# Output
thermo 50
thermo_style custom step lx ly lz press pxx pyy pzz pe temp

fix stress_out all print 50 "$(step) $(lx) $(pxx)" file ../outputs/stress_strain_comp0.8_temp300_rate1e+09.out screen no

run 500  # Reduced for testing
